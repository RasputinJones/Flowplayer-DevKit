				rtmpBWcheck: {  
		            url: '../flowplayer.rtmp.cluster-3.0.0-alpha1.swf',  
		            serverType: 'red5',
		            netConnectionUrl: 'rtmp://cyzy7r959.rtmphost.com/flowplayer',
		            netBWConnectionUrl: 'rtmp://localhost/bwcheck',
		            hosts: [
